<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ImageView
            android:id="@+id/imageViewSubscriptionCover"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/temp_cover" />

        <TextView
            android:id="@+id/textViewSubscriptionName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imageViewSubscriptionCover"
            android:maxLines="1"
            android:text="Эдди &quot;Орел&quot;"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textViewSubscriptionGenre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewSubscriptionName"
            android:layout_toRightOf="@+id/imageViewSubscriptionCover"
            android:maxLines="1"
            android:text="драма, мелодрама, ..." />


        <TextView
            android:id="@+id/textViewSubscriptionAmountSeats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:text="1"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textViewSubscriptionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/textViewSubscriptionAmountSeats"
            android:paddingBottom="10dp"
            android:text="Необходимое количество мест:  "
            android:textColor="@android:color/black"
            android:textSize="15sp" />



        <TextView
            android:id="@+id/textViewSubscriptionForAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewSubscriptionGenre"
            android:layout_toRightOf="@id/imageViewSubscriptionCover"
            android:padding="8dp"
            android:text="16+"
            android:textColor="@android:color/black"
            android:textSize="17sp" />


        <TextView
            android:id="@+id/textViewSubscriptionYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/textViewSubscriptionGenre"
            android:padding="8dp"
            android:text="2016"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

    </RelativeLayout>


</android.support.v7.widget.CardView>
