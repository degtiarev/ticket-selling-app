<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ImageView
            android:id="@+id/imageViewNewsCover"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/temp_cover" />

        <TextView
            android:id="@+id/textViewNewsName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imageViewNewsCover"
            android:maxLines="1"
            android:text="&quot;Ночь музеев-2016&quot;"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textViewNewsInShort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewNewsName"
            android:layout_toRightOf="@+id/imageViewNewsCover"
            android:maxLines="2"
            android:text="Какой мы ее увидим?" />


        <TextView
            android:id="@+id/textViewNewsDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:text="19.05.2016"
            android:textColor="@android:color/black"
            android:textSize="15sp" />


    </RelativeLayout>


</android.support.v7.widget.CardView>
