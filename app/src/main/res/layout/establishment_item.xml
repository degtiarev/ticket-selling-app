<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">


        <TextView
            android:id="@+id/textViewEstablishmentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:padding="15dp"
            android:text="Большое кино"
            android:textColor="@android:color/black"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/textViewEstablishmentAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewEstablishmentName"
            android:paddingLeft="15dp"
            android:text="ТРК Alimpic, ул. Боевая, 25, Астрахань, Астраханская обл., 414024"
            android:textColor="@android:color/holo_red_dark"/>

    </RelativeLayout>


</android.support.v7.widget.CardView>
